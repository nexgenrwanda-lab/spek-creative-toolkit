{
  "manifest_version": 3,
  "name": "Spek Tools - Design Assistant",
  "version": "1.0.0",
  "description": "Professional design tools for creators. Font identification, color palette extraction, and AI background removal.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Spek Tools"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api-inference.huggingface.co/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icons/icon-large.png",
    "48": "icons/icon-large.png",
    "128": "icons/icon-large.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}